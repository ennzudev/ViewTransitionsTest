---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Vantech Solutions portfolio website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body>
		<div id="app" class="relative h-screen">

			<header class="[grid-area:header] flex flex-row justify-between items-center border-red-400 min-h-[75px] border-0">
				<a href="/" class="text-2xl font-bold">Vantech Solutions</a>
				<nav>
					<a href="/about">About</a>
					<a href="/contact">Contact</a>
				</nav>
			</header>
			<main class="[grid-area:main] border-green-400 border-0 overflow-y-auto">
				<slot />
			</main>
			<footer class="[grid-area:footer] border-purple-400 min-h-[100px] border-0">
				FOOTER
			</footer>
		</div>
	</body>
</html>
<style>
	#app{
		display: grid;
		grid-template-areas:
			"header"
			"main"
			"footer";
			grid-template-columns: 1fr;
			grid-template-rows: auto 1fr auto;
	}
	</style>
<style is:global>
	html{
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		background: #282828;
		color: #f8f8f2;
	}
</style>
